<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Rectangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="414dp"
        android:layout_height="60dp"
        android:background="#6771C1"
        android:hapticFeedbackEnabled="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarThumbHorizontal="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="61dp"
                    android:fontFamily="@font/neuzeitgrotesk"
                    android:gravity="bottom"
                    android:text="Conference"
                    android:textColor="#5EBDC4EB"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="17.85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_chat_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6.15dp"
                    android:fontFamily="@font/neuzeitgrotesk"
                    android:gravity="bottom"
                    android:paddingTop="0dp"
                    android:text="Discussions"
                    android:textColor="#FFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="17.85dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="61dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginEnd="6.15dp"
                    android:layout_marginRight="6.15dp"
                    android:background="@drawable/ic_chat_light_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/neuzeitgrotesk"
                    android:gravity="bottom
"
                    android:text="Board"
                    android:textAlignment="gravity"
                    android:textColor="#3BBDC4EB"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.inputmethodservice.ExtractEditText
        android:id="@+id/extractEditText"
        android:layout_width="344dp"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="748dp"
        android:background="@drawable/round"
        android:fontFamily="@font/neuzeitgrotesk"
        android:hint="Search"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#F5F6FC"
        android:textColorHint="#73D9DBEA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listofpeople"
        android:layout_width="344.5dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="163dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

    </androidx.recyclerview.widget.RecyclerView>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/moreButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle"
        android:src="@drawable/ic_more_horiz_black_24dp"
        />


    <include layout="@layout/bottombutton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
