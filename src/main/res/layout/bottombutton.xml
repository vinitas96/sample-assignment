<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:background="@drawable/floating_intene"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehaviour"
    app:behavior_hideable="true"
    android:id="@+id/bottomsheet"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_alignParentBottom="true"
    android:visibility="invisible">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:text="New Team"
        android:textColor="#6771C1"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/neuzeitgrotesk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="27.8dp"
        android:layout_height="27.6dp"
        android:layout_marginLeft="18dp"
        android:src="@drawable/ic_group_add_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text1"
        app:layout_constraintVertical_bias="0.571"
        app:layout_editor_absoluteX="328.9dp"
        app:layout_editor_absoluteY="216.24dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="New Discussion"
        android:textColor="#6771C1"
        android:fontFamily="@font/neuzeitgrotesk"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintVertical_bias="0.26"
        app:layout_editor_absoluteX="204dp"
        app:layout_editor_absoluteY="287dp" />

    <ImageView
        android:layout_width="22.1dp"
        android:layout_height="22.1dp"
        android:src="@drawable/ic_chat_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintVertical_bias="1.0"
        app:layout_editor_absoluteX="333.9dp"
        app:layout_editor_absoluteY="283.1dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/popup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle"
        android:src="@drawable/ic_close_black_24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>